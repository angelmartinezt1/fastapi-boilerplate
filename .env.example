# ============================================
# Configuración de la aplicación
# ============================================
APP_NAME="FastAPI Lambda App"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# ============================================
# Configuración de documentación
# ============================================
# Set to false in production/Lambda for better performance
ENABLE_DOCS=true

# ============================================
# Configuración de rendimiento
# ============================================
# Set to false in production for faster responses (bypasses Pydantic validation)
VALIDATE_RESPONSES=false

# ============================================
# Configuración de base de datos
# ============================================
# MongoDB connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/your-database

# ============================================
# Configuración de logging
# ============================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# Variables de entorno específicas para Lambda
# ============================================
# These are automatically set by AWS Lambda, no need to configure locally
# AWS_LAMBDA_FUNCTION_NAME=
# AWS_EXECUTION_ENV=
# LAMBDA_RUNTIME_DIR=

# ============================================
# Configuración de desarrollo local
# ============================================
# Puerto para el servidor local (opcional, default: 8081)
# LOCAL_SERVER_PORT=8081

# ============================================
# Configuración de seguridad (solo para referencia)
# ============================================
# JWT secrets and keys should be configured in your Lambda Authorizer
# Never put real JWT secrets in this file
# JWT_SECRET_KEY=your-jwt-secret-key-here
# JWT_ALGORITHM=RS256

# ============================================
# Configuración de CORS (opcional)
# ============================================
# CORS_ALLOW_ORIGINS=["*"]
# CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
# CORS_ALLOW_HEADERS=["*"]

# ============================================
# Configuración de caché (opcional)
# ============================================
# Cache TTL in seconds for various operations
# AUTHORIZER_CACHE_TTL=300
# DATABASE_QUERY_CACHE_TTL=60