{
    // 🐍 CONFIGURACIÓN PYTHON
    "python-envs.defaultEnvManager": "ms-python.python:venv",
    "python.terminal.activateEnvironment": true,
    // 🔍 LINTING (ANÁLISIS DE CÓDIGO)
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false, // Desactivar pylint (muy estricto)
    "python.linting.flake8Enabled": true, // Activar flake8 (recomendado)
    "python.linting.lintOnSave": true, // Lint al guardar
    // 🎨 FORMATEO AUTOMÁTICO
    "python.formatting.provider": "black", // Formateador automático
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    "editor.formatOnSave": true, // Formatear al guardar
    // 🔧 CONFIGURACIÓN FLAKE8
    "python.linting.flake8Args": [
        "--max-line-length=88", // Líneas hasta 88 caracteres
        "--ignore=E203,W503", // Ignorar conflictos con black
        "--exclude=venv,migrations,__pycache__"
    ],
    // 🧪 TESTING
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],
    // 📝 EDITOR
    "editor.rulers": [
        88
    ], // Regla visual en columna 88
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // 📁 ARCHIVOS
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/.pytest_cache": true
    },
    // 🔍 INTELLISENSE
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    // 🚀 FASTAPI ESPECÍFICO
    "python.analysis.extraPaths": [
        "./app"
    ],
    "emmet.includeLanguages": {
        "jinja-html": "html"
    }
}