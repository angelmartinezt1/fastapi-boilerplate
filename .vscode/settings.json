{
    // ğŸ CONFIGURACIÃ“N PYTHON
    "python-envs.defaultEnvManager": "ms-python.python:venv",
    "python.terminal.activateEnvironment": true,
    // ğŸ” LINTING (ANÃLISIS DE CÃ“DIGO)
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false, // Desactivar pylint (muy estricto)
    "python.linting.flake8Enabled": true, // Activar flake8 (recomendado)
    "python.linting.lintOnSave": true, // Lint al guardar
    // ğŸ¨ FORMATEO AUTOMÃTICO
    "python.formatting.provider": "black", // Formateador automÃ¡tico
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    "editor.formatOnSave": true, // Formatear al guardar
    // ğŸ”§ CONFIGURACIÃ“N FLAKE8
    "python.linting.flake8Args": [
        "--max-line-length=88", // LÃ­neas hasta 88 caracteres
        "--ignore=E203,W503", // Ignorar conflictos con black
        "--exclude=venv,migrations,__pycache__"
    ],
    // ğŸ§ª TESTING
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests"
    ],
    // ğŸ“ EDITOR
    "editor.rulers": [
        88
    ], // Regla visual en columna 88
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // ğŸ“ ARCHIVOS
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/venv": true,
        "**/.pytest_cache": true
    },
    // ğŸ” INTELLISENSE
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    // ğŸš€ FASTAPI ESPECÃFICO
    "python.analysis.extraPaths": [
        "./app"
    ],
    "emmet.includeLanguages": {
        "jinja-html": "html"
    }
}